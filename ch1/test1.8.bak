#lang slideshow
(define (sqrt-lite-3 guess x)
  (if (good-enough? guess (improve guess x))
      guess
      (sqrt-lite-3 (improve guess x)
                   x)))
(define (improve guess x)
  (/ (+ (/ x (* guess guess)) 
        (* 2 guess))
     3))
(define (good-enough? old-guess new-guess)
  (< (/ (abs (- new-guess old-guess))
        old-guess)
     0.00001))
(define (sqrt-3 x)
  (sqrt-lite-3 1.0 x))

